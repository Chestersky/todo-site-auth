<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= todo.title %></div>
    <form class="ui form" action="/todos/<%= todo._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="todo[title]" value="<%= todo.title %>">
        </div>
        <div class="field">
            <label>Description</label>
            <textarea name="todo[body]"><%= todo.body %></textarea>
        </div>
        <input class="ui black basic button" type="submit" value="Send">
    </form>
</div>
<% include ./partials/footer %>